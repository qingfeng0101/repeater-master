{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["pinia-plugin-persist"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  //, "src/**/*.d.ts"
  "include": ["src/**/*.ts", "env.d.ts","src/**/*.vue"],
}
